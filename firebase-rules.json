{
  "rules": {
    "users": {
      "$uid": {
        "chats": {
          ".read": "$uid === auth.uid",
          ".write": "auth != null"
        },
        "actionItems": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "userProfiles": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    "chats": {
      "$chatId": {
        "metadata": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "messages": {
          ".read": "auth != null",
          "$messageId": {
            ".write": "auth != null",
            ".validate": "newData.exists() || data.child('senderId').val() === auth.uid"
          }
        }
      }
    }
  }
}

