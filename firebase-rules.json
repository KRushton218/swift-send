{
  "rules": {
    "conversations": {
      "$conversationId": {
        ".read": "auth != null && root.child('conversationMembers').child($conversationId).child(auth.uid).exists()",
        ".write": "auth != null && root.child('conversationMembers').child($conversationId).child(auth.uid).exists()",
        
        "activeMessages": {
          "$messageId": {
            ".write": "auth != null && (!data.exists() && newData.child('senderId').val() === auth.uid) || (data.exists() && data.child('senderId').val() === auth.uid) || (newData.child('deliveryStatus').child(auth.uid).exists() || newData.child('readBy').child(auth.uid).exists())",
            ".validate": "newData.hasChildren(['id', 'senderId', 'text', 'timestamp'])"
          }
        },
        
        "metadata": {
          "typingUsers": {
            "$userId": {
              ".write": "$userId === auth.uid"
            }
          },
          "lastActivity": {
            ".write": "auth != null"
          }
        }
      }
    },
    
    "conversationMembers": {
      "$conversationId": {
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    
    "userConversations": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": "auth != null"
      }
    },
    
    "presence": {
      "$userId": {
        ".read": "auth != null",
        ".write": "$userId === auth.uid"
      }
    },
    
    "userProfiles": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    },
    
    "users": {
      "$uid": {
        "chats": {
          ".read": "$uid === auth.uid",
          ".write": "auth != null"
        },
        "mentionedMessages": {
          ".read": "$uid === auth.uid",
          ".write": "auth != null"
        }
      }
    },
    
    "chats": {
      "$chatId": {
        "metadata": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "messages": {
          ".read": "auth != null",
          "$messageId": {
            ".write": "auth != null",
            ".validate": "newData.exists() || data.child('senderId').val() === auth.uid"
          }
        }
      }
    }
  }
}

